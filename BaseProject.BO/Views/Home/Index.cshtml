@{
    Layout = "_Layout";
}
@model DashboardViewModel
<!-- Start Content-->
<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Dashboard</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6 col-lg-6">

            <div class="row">
                <div class="col-sm-4">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-end">
                            </div>
                            <h5 class="text-muted fw-normal mt-0" title="Number of Customers">Today Registered</h5>
                            <h3 id="h3todayUserCount" class="mt-3 mb-3"></h3>

                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->

                <div class="col-sm-4">
                    <div class="card widget-flat">
                        <div class="card-body">
                            <div class="float-end">
                            </div>
                            <h5 class="text-muted fw-normal mt-0" title="Number of Customers">This Month Registered</h5>
                            <h3 id="h3thisMonthUserCount" class="mt-3 mb-3"></h3>

                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
                <div class="col-sm-4">
                    <div class="card widget-flat">
                        <div class="card-body">

                            <h5 class="text-muted fw-normal mt-0" title="Number of Customers">Total Users</h5>
                            <h3 id="h3totalUserCount" class="mt-3 mb-3"></h3>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div> <!-- end col -->
    </div>
    <!-- end row -->

    <div class="row">
        <div class="col-xl-6 col-lg-12 order-lg-2 order-xl-1">
            <div class="card">
                <div class="d-flex card-header justify-content-between align-items-center">
                    <h4 class="header-title">LAST 5 USERS</h4>
                </div>

                <div class="card-body pt-0">
                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap table-hover mb-0">
                            <tbody>
                                @foreach (var item in @Model.LastFiveUser)
                                {
                                    <tr>
                                        <td>
                                            <h5 class="font-14 my-1 fw-normal">@item.Name @item.Surname</h5>
                                            <span class="text-muted font-13">@item.Id</span>
                                        </td>
                                        <td>
                                            <h5 class="font-14 my-1 fw-normal">@item.Email</h5>
                                            @*<span class="text-muted font-13">Price</span>*@
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div> <!-- end table-responsive-->
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div> <!-- end col-->
    </div>
    <!-- end row -->

</div>
<!-- container -->
    </div>
