<script>
    function ShowInformation() {
        $.post("/Home/GetUserStatistics", function (result) {
            $("#h3totalUserCount").html(result.TotalUserCount);
            $("#h3thisMonthUserCount").html(result.ThisMonthUserCount);
            $("#h3todayUserCount").html(result.TodayUserCount);
        });
    }
    ShowInformation();
</script>